<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	version="3.1">
	<display-name>GitVitalServer</display-name>
	<servlet>
		<servlet-name>GitVital Jersey</servlet-name>
		<servlet-class>gitvital.rest.ServerService</servlet-class>
		<init-param>
			<param-name>jersey.config.server.provider.packages</param-name>
			<param-value>gitvital.rest</param-value>
		</init-param>
		<init-param>
            <param-name>jersey.config.server.provider.classnames</param-name>
            <param-value>gitvital.rest.CorsFilter</param-value>
        </init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>GitVital Jersey</servlet-name>
		<url-pattern>/*</url-pattern>
	</servlet-mapping>
</web-app>